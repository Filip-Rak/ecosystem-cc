{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Release Performance Test",
            "type": "shell",
            "command": "${workspaceRoot}/build/clang-release/src/ecosystem",
            "args": [
                "--preset",
                "resources/Presets/benchmarkPreset.json",
                "--tlog",
                "1000000",
                "--gui",
                "--clean",
                "--test-performance",
                "--agents",
                "10000",
                "--output",
                "output/optionTest"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "windows": {
                "program": "${workspaceRoot}/build/clang-debug/src/ecosystem.exe",
            },
            "linux": {
                "program": "${workspaceRoot}/build/clang-debug/src/ecosystem",
            }
        },
        {
            "label": "Run Release",
            "type": "shell",
            "command": "${workspaceRoot}/build/clang-release/src/ecosystem",
            "args": [
                "--preset",
                "resources/Presets/continentsPreset.json",
                "--tlog",
                "1000",
                "--gui",
                "--clean",
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "windows": {
                "program": "${workspaceRoot}/build/clang-debug/src/ecosystem.exe",
            },
            "linux": {
                "program": "${workspaceRoot}/build/clang-debug/src/ecosystem",
            }
        }
    ]
}